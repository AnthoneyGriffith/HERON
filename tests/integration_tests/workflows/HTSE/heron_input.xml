<HERON>
  <TestInfo>
    <name>HTSE</name>
    <author>talbpaul</author>
    <created>2021-08-29</created>
    <description>
      Typical IES configuration with NPP, BOP, HTSE, H2 Storage, H2 Customer. Uses reduced histories
      for shorter project lifetime.
    </description>
    <classesTested>HERON</classesTested>
  </TestInfo>

  <Case name="HTSE_example">
    <mode>opt</mode>
    <num_arma_samples>20</num_arma_samples>
    <time_discretization>
      <year_variable>YEAR</year_variable>
      <time_variable>HOUR</time_variable>
      <end_time>23</end_time>
      <num_steps>24</num_steps>
    </time_discretization>
    <economics>
      <ProjectTime>3</ProjectTime>
      <DiscountRate>0.08</DiscountRate>
      <tax>0.1</tax>
      <inflation>0.1</inflation>
      <verbosity>50</verbosity>
    </economics>
    <dispatcher>
      <pyomo/>
    </dispatcher>

  </Case>


  <Components>
    <!--

      VRE sources

    -->
    <Component name="Wind_source">
      <produces resource="wind_pct" dispatch="independent">
        <capacity resource="wind_pct">
          <ARMA variable="WIND">synth</ARMA> <!-- percent utilization -->
        </capacity>
      </produces>
      <economics>
        <lifetime>1</lifetime>
      </economics>
    </Component>

    <Component name="Solar_source">
      <produces resource="sun_pct" dispatch="independent">
        <capacity resource="sun_pct">
          <ARMA variable="SOLAR">synth</ARMA> <!-- percent utilization -->
        </capacity>
      </produces>
      <economics>
        <lifetime>1</lifetime>
      </economics>
    </Component>

    <!--

      Generators

    -->
    <Component name="NPP">

      <produces resource="electricity" dispatch="independent">
        <capacity resource="electricity">
          <fixed_value>20</fixed_value> <!-- GW -->
        </capacity>
      </produces>

      <economics>
        <lifetime>80</lifetime>
        <!-- construction cost -->
        <CashFlow name="capex" type="one-time" taxable="True" inflation="none" mult_target="False">
          <driver>
            <variable>NPP_capacity</variable>
          </driver>
          <reference_price>
            <!-- 4000 $/kW * 1e6 kW/GW * 0.06 GW SMR = low est cost for SMR -->
            <fixed_value>-240e6</fixed_value>
          </reference_price>
          <scaling_factor_x>
            <fixed_value>0.85</fixed_value>
          </scaling_factor_x>
          <reference_driver>
            <!-- Based on 60 MW SMR Reactor -->
            <fixed_value>0.06</fixed_value>
          </reference_driver>
          <!-- <depreciate>15</depreciate> -->
        </CashFlow>

        <!-- variable cost - Note one can argue this should be 0 for nuclear, but some nonzero lets VRE go first -->
        <CashFlow name="var_OM" type="repeating" taxable='True' inflation='none' mult_target='False'>
          <driver>
            <activity>electricity</activity>
            <multiplier>-1</multiplier>
          </driver>
          <reference_price>
            <!-- ballpark $5/MWh -->
            <fixed_value>5e3</fixed_value>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>


    <Component name="NGCC">

      <produces resource="electricity" dispatch="independent">
        <capacity resource="electricity">
          <fixed_value>40</fixed_value> <!-- GW -->
        </capacity>
      </produces>

      <economics>
        <lifetime>10</lifetime>
        <!-- construction cost -->
        <CashFlow name="capex" type="one-time" taxable="True" inflation="none" mult_target="False">
          <driver>
            <variable>NGCC_capacity</variable>
          </driver>
          <reference_price>
            <!-- 1000 $/kW * 1e6 kW/GW = est cost for 1 GW NGCC -->
            <fixed_value>-1e9</fixed_value>
          </reference_price>
          <!-- <depreciate>15</depreciate> -->
        </CashFlow>

        <!-- variable cost - Note one can argue this should be 0 for nuclear, but some nonzero lets VRE go first -->
        <CashFlow name="var_OM" type="repeating" taxable='True' inflation='none' mult_target='False'>
          <driver>
            <activity>electricity</activity>
            <multiplier>-1</multiplier>
          </driver>
          <reference_price>
            <!-- ballpark $25/MWh -->
            <fixed_value>25e3</fixed_value>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>


    <Component name="Solar_farm">

      <produces resource="electricity" dispatch="independent">
        <consumes>sun_pct</consumes>
        <capacity resource="electricity">
          <fixed_value>1</fixed_value> <!-- GW -->
        </capacity>
        <transfer>
          <linear> <!-- since sun_pct is pct avail, 1:1 transfer rate-->
            <rate resource="sun_pct">-1</rate>
            <rate resource="electricity">1</rate>
          </linear>
        </transfer>
      </produces>

      <economics>
        <lifetime>1</lifetime>
        <CashFlow name="capex" type="one-time" taxable="True" inflation="none" mult_target="False">
          <driver>
            <variable>Solar_farm_capacity</variable>
          </driver>
          <reference_price>
            <!-- 1800 $/kW * 1e6 kW/GW = est cost for 1 GW NGCC -->
            <fixed_value>-1.8e9</fixed_value>
          </reference_price>
          <!-- <depreciate>10</depreciate> -->
        </CashFlow>
      </economics>
    </Component>

    <Component name="Wind_farm">

      <produces resource="electricity" dispatch="independent">
        <!-- <consumes>wind_pct</consumes> -->
        <capacity resource="electricity">

          <opt_bounds>3, 10</opt_bounds>
          <utility_factor>
            <ARMA var="WIND">synth</ARMA>
          </utility_factor>
          <multiplier>-1</multiplier>

        </capacity>

        <capacity resource="electricity">
          <opt_bounds>3, 10</opt_bounds>
          <multiplier>-1</multiplier>
        </capacity>
        <utility_factor>
          <ARMA var="WIND">synth</ARMA>
        </utility_factor>

        <!-- <transfer>
          <linear>
            <rate resource="wind_pct">-1</rate>
            <rate resource="electricity">1</rate>
          </linear>
        </transfer> -->
      </produces>

      <economics>
        <lifetime>1</lifetime>
        <CashFlow name="capex" type="one-time" taxable="True" inflation="none" mult_target="False">
          <driver>
            <variable>Wind_farm_capacity</variable>
          </driver>
          <reference_price>
            <!-- 1300 $/kW * 1e6 kW/GW = est cost for 1 GW NGCC -->
            <fixed_value>-1.3e9</fixed_value>
          </reference_price>
          <!-- <depreciate>10</depreciate> -->
        </CashFlow>
      </economics>
    </Component>


    <Component name="OtherFossil">

      <produces resource="electricity" dispatch="independent">
        <capacity resource="electricity">
          <fixed_value>100</fixed_value> <!-- GW -->
        </capacity>
      </produces>

      <economics>
        <lifetime>1</lifetime>
        <CashFlow name="import" type="repeating" taxable='True' inflation='none' mult_target='False'>
          <driver>
            <activity>electricity</activity>
            <multiplier>-1</multiplier>
          </driver>
          <reference_price>
            <!-- ballpark $5/MWh -->
            <fixed_value>100e3</fixed_value>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

    <!--

      IES

    -->
    <Component name="HTSE">

      <produces resource="H2" dispatch="independent">
        <consumes>electricity</consumes>
        <capacity resource="H2">
          <opt_bounds>0, 10</opt_bounds>
        </capacity>
        <transfer>
          <linear> <!-- 43 kWh produces 1 kg H2-->
            <rate resource="electricity">-43e-6</rate>
            <rate resource="H2">1</rate>
          </linear>
        </transfer>
      </produces>

      <economics>
        <lifetime>30</lifetime>

        <CashFlow name="capex" type="one-time" taxable="True" inflation='none' mult_target='False'>
          <driver><variable>HTSE_capacity</variable></driver>
          <reference_price><fixed_value>-545263737</fixed_value></reference_price> <!-- 2019 Frick study -->
          <reference_driver><fixed_value>7.4</fixed_value></reference_driver> <!-- ref size 7.4 kg/s -->
          <scaling_factor_x><fixed_value>0.955</fixed_value></scaling_factor_x>
          <!-- <depreciate>15</depreciate> -->
        </CashFlow>

        <CashFlow name="fixed_OM" type="repeating" period="year" taxable="True" inflation='none' mult_target='False'>
          <driver><variable>HTSE_capacity</variable></driver>
          <reference_price><fixed_value>-70752705</fixed_value></reference_price> <!-- 2019 Frick study -->
          <reference_driver><fixed_value>7.4</fixed_value></reference_driver>
          <scaling_factor_x><fixed_value>0.955</fixed_value></scaling_factor_x>
        </CashFlow>
        <!-- No variable OM b/c hot standby is sunk cost, electricity price comes from grid opp. cost -->
      </economics>
    </Component>

    <!--

      Storage

    -->
    <Component name="batteries">

      <stores resource="electricity" dispatch="independent">
        <capacity resource="electricity">
          <opt_bounds>0, 10</opt_bounds>
        </capacity>
        <initial_stored>
          <fixed_value>0</fixed_value>
        </initial_stored>
      </stores>

      <economics>
        <lifetime>30</lifetime>
        <CashFlow name="capex" type="one-time" taxable='True' inflation='none' mult_target='False'>
          <driver>
            <variable>batteries_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-828e6</fixed_value>
          </reference_price>
          <!-- <depreciate>10</depreciate> -->
        </CashFlow>
      </economics>
    </Component>


    <Component name="H2_storage">

      <stores resource="H2" dispatch="independent">
        <capacity resource="H2"><opt_bounds>0, 5e5</opt_bounds></capacity>
        <initial_stored>
          <fixed_value>0</fixed_value>
        </initial_stored>
      </stores>

      <economics>
        <lifetime>30</lifetime>
        <CashFlow name="capex" type="one-time" taxable='True' inflation='none' mult_target='False'>
          <driver>
            <variable>H2_storage_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-550</fixed_value> <!-- 2019 Frick midwest study -->
          </reference_price>
          <!-- <depreciate>15</depreciate> -->
        </CashFlow>
      </economics>
    </Component>

    <!--

      Sinks

    -->
    <Component name="grid">
      <demands resource="electricity" dispatch="fixed">
        <capacity>
          <ARMA variable="TOTALLOAD">synth</ARMA>
          <multiplier>-1</multiplier>
        </capacity>
      </demands>
      <economics>
        <lifetime>1</lifetime>
      </economics>
    </Component>


    <Component name="H2_market">

      <demands resource="H2" dispatch="independent">
        <capacity>
          <opt_bounds>0, -10</opt_bounds>
        </capacity>
      </demands>

      <economics>
        <lifetime>1</lifetime>
        <CashFlow name="H2_sales" type="repeating" taxable='True' inflation='none' mult_target='False'>
          <driver>
            <activity>H2</activity>
            <multiplier>-1</multiplier>
          </driver>
          <reference_price>
            <fixed_value>3.0</fixed_value> <!-- $/kg H2-->
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

  </Components>

  <DataGenerators>
    <ARMA name='synth' variable="WIND,SOLAR,TOTALLOAD">arma_202112_nyiso_def.pk</ARMA>
    <!-- <Function name="functions">funcs.py</Function> -->
  </DataGenerators>

</HERON>
